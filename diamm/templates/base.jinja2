<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="search" href="{{ request.scheme }}://{{ request.get_host() }}{{ url('opensearch') }}" type="application/opensearchdescription+xml" title="DIAMM"/>
    {% block title %}
    <title>Digital Image Archive of Medieval Music</title>
    {% endblock %}
    {% block head %}
    {% endblock %}
</head>
<body>
    {% if messages %}
        <div class="columns is-marginless">
            <div class="column is-marginless is-paddingless">
                {% for message in messages %}
                    <div class="notification is-info">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    {# include "website/blocks/beta_notice.jinja2" #}
    {% include "website/blocks/header.jinja2" %}

    <div class="full-width">
        {% block fullwidth %}
        {% endblock %}
    </div>

    <div class="container is-fluid page-body">
        {% block body %}
        {% endblock %}
    </div>

    <footer class="footer">
        <div class="container columns">
            <div class="column is-two-thirds footer-address">
                <img src="{{ static('images/headerLogo.png') }}" alt="DIAMM Logo" />
                <h5 class="title is-5">The Digital Image Archive of Medieval Music</h5>
                <p>University of Oxford,<br />
                    Faculty of Music,<br />
                    St. Aldates,<br />
                    Oxford, OX1 1DB,<br />
                    United Kingdom
                </p>
            </div>
            {# <div class="column">
                <table>
                    <tr>
                        <td><img src="{{ static('images/oxford.png') }}"></td>
                        <td><img src="{{ static('images/bodleian.png') }}"></td>
                    </tr>
                    <tr>
                        <td><img src="{{ static('images/ba.png') }}"></td>
                        <td><img src="{{ static('images/johnfell.png') }}"></td>
                    </tr>
                    <tr>
                        <td><img src="{{ static('images/ahrc.png') }}"></td>
                        <td></td>
                    </tr>
                </table>
            </div> #}
        </div>
    </footer>
    <link rel="stylesheet" href="{{ static('stylesheets/styles.css') }}" />

    {% block scripts %}
    {% endblock %}
    {% if not debug %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-70914579-2', 'auto');
        ga('send', 'pageview');

    </script>
    {% endif %}
</body>
</html>
