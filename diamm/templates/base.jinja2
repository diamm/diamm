<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="search" href="{{ request.scheme }}://{{ request.get_host() }}{{ url('opensearch') }}" type="application/opensearchdescription+xml" title="DIAMM"/>
    <link rel="stylesheet" href="{{ static('stylesheets/styles.css') }}" />
    {% block title %}
    <title>Digital Image Archive of Medieval Music</title>
    {% endblock %}
    {% block head %}
    {% endblock %}
    <script type="application/json">
    {
        "@context": "http://schema.org",
        "@type": "Organization",
        "name": "Digital Image Archive of Medieval Music",
        "url": "https://www.diamm.ac.uk",
        "address": {
            "@type": "PostalAddress",
            "addressCountry": "United Kingdom",
            "addressLocality": "Oxford",
            "addressRegion": "Oxfordshire",
            "streetAddress": "St. Aldates",
            "postalCode": "OX1 1DB"
        }
        "contactPoint": [{
            "@type": "ContactPoint",
            "telephone": "+44 (0)1865 241323",
            "contactType": "customer service",
            "email": "diamm@music.ox.ac.uk",
            "hoursAvailable": {
                "@type": "OpeningHoursSpecification",
                "opens": "10:00:00Z+00:00",
                "closes": "19:00:00Z+00:00"
            }
        }]
    }
    </script>
</head>
<body>
    {% if messages %}
        <div class="columns is-marginless">
            <div class="column is-marginless is-paddingless">
                {% for message in messages %}
                    <div class="notification is-info">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    {% include "website/blocks/header.jinja2" %}

    <div class="full-width">
        {% block fullwidth %}
        {% endblock %}
    </div>

    <main class="container is-fluid is-fullheight page-body">
        {% block body %}
        {% endblock %}
    </main>

    {% include "website/blocks/footer.jinja2" %}

    {% block scripts %}
    {% endblock %}
    {% if not debug %}
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BX71EKZJVX"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-BX71EKZJVX');
    </script>
    {% endif %}
</body>
</html>
