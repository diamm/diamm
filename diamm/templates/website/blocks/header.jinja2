<header class="site-header">
    <nav class="nav">
        <div class="nav-left">
            <a href="/" class="nav-item is-brand">
                <img src="{{ static('images/headerLogo.png') }}" alt="DIAMM Logo" />
            </a>
            <div class="dropdown-menu-parent">
                <a href="/about" class="nav-item">About DIAMM</a>
                <div class="dropdown-menu right-menu is-3-columns">
                    {{ get_menu() }}
                </div>
            </div>
            <div class="dropdown-menu-parent">
                <a href="{{ url('search') }}" class="nav-item">Search & Browse</a>
                <div class="dropdown-menu right-menu is-1-column">
                    <div class="dropdown-menu-section">
                        <div>
                            <a href="{{ url('search') }}">Search the Database</a>
                        </div>
                        <div>
                            <a href="{{ url('country-list') }}">Browse by Country</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="nav-right">
            <a href="http://www.oxforduniversitystores.co.uk/product-catalogue/music-faculty-diamm/music-faculty-diamm-publications/donation-help-to-keep-wwwdiammacuk-free" class="nav-item nav-highlight">Donate</a>
            {% if user.is_authenticated %}
                <div class="dropdown-menu-parent">
                    <a href="{{ url('user-account') }}" class="nav-item">Your account</a>
                    <div class="dropdown-menu left-menu account-menu">
                        <div class="dropdown-menu-section">
                            <h4>Welcome, {{ request.user.full_name }}</h4>
                            <div>
                                <a href="{{ url("user-account") }}">Your profile</a>
                            </div>
                            <div>
                                <form method="post" action="{{ url('logout') }}">
                                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                                    <button type="submit" style="background: none!important;border: none;padding: 0!important;cursor: pointer;font-size:1rem;">Log out</button>
                                </form>
                            </div>
                            {% if request.user.is_superuser %}
                            <div>
                                <a href="/admin">Admin Interface</a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

            {% else %}
                <a class="nav-item" href="{{ url('login') }}?next={{ request.get_full_path() }}">Login or Register</a>
            {% endif %}
        </div>
    </nav>
</header>
