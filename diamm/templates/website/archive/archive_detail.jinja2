{% extends "base.jinja2" %}

{% block body %}
    <div class="columns">
        <div class="column is-two-thirds">
            <h1 class="title">{{ content.name }} ({{ content.siglum }})</h1>
            <h2 class="subtitle"><a href="{{ content.city.url }}">{{ content.city.name }}</a>, {{ content.city.country }}</h2>
        </div>
        <div class="column">
            <img src="{{ content.logo }}" />
        </div>
    </div>
    <div class="columns">
        <div class="column">
            {% if content.website %}
                <p>
                    <strong>Archive website: </strong><a href="http://{{ content.website }}">{{ content.name }}</a>
                </p>
            {% endif %}
            {% if content.sources %}
                <h3 class="title is-4">Sources in this Archive</h3>
                <div class="archive-sources">
                    {% for source in content.sources %}
                        <div class="box">
                            {% if source.cover_image %}
                                <a href="{{ source.url }}">
                                    <img src="{{ source.cover_image }}" />
                                </a>
                            {% endif %}
                            <div>
                                <a href="{{ source.url }}">{{ source.display_name }}</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
