{% extends "base.jinja2" %}

{% block body %}
    <div class="row">
        <div class="sixteen columns">
            <h1>{{ content.name }} ({{ content.siglum }})</h1>
            <img src="{{ content.logo }}" />
            <h2><a href="{{ content.city.url }}">{{ content.city.name }}</a>, {{ content.city.country }}</h2>
            {% if content.website %}
                <p><a href="http://{{ content.website }}">{{ content.name }} website</a></p>
            {% endif %}
            {% if content.sources %}
                <h3>Sources in this Archive</h3>
                <ul>
                    {% for source in content.sources %}
                        <li class="image-source-list">
                            {% if source.has_images and source.public_images %}
                                <i class="fa fa-picture-o" aria-hidden="true"></i>
                            {% endif %}
                            <a href="{{ source.url }}">{{ source.display_name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
