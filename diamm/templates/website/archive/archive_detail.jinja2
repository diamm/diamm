{% extends "base.jinja2" %}

{% block body %}
    <div class="columns">
        <div class="column is-two-thirds">
            <h1 class="title">{{ content.name }} ({{ content.siglum }})</h1>
            <h2 class="subtitle"><a href="{{ content.city.url }}">{{ content.city.name }}</a>, {{ content.city.country }}</h2>
        </div>
        <div class="column">
            <img src="{{ content.logo }}" />
        </div>
    </div>
    <div class="columns">
        {% if content.website %}
            <p><a href="http://{{ content.website }}">{{ content.name }} website</a></p>
        {% endif %}
        {% if content.sources %}
            <h3>Sources in this Archive</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Source</th>
                    </tr>
                </thead>
                <tbody>
                {% for source in content.sources %}
                    <tr>
                        <td>
                            {% if source.has_images and source.public_images %}
                                <i class="fa fa-picture-o" aria-hidden="true"></i>
                            {% endif %}
                            <a href="{{ source.url }}">{{ source.display_name }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

    </div>
{% endblock %}
