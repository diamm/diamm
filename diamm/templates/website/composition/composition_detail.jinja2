{% extends "base.jinja2" %}

{% block title %}
    <title>Composition: {{ content.title }}</title>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="sixteen columns">
            <h1>{{ content.title }}</h1>
            <h2>Composers</h2>
            <ul>
            {% for composer in content.composers %}
                <li>
                    <a href="{{ composer.url }}">{{ composer.full_name }} </a>
                    {% if composer.uncertain %}
                        (uncertain)
                    {% endif %}
                </li>
            {% endfor %}
            </ul>
            <h2>Appears in</h2>
            <ul>
            {% for source in content.sources %}
                <li><a href="{{ source.url }}">{{ source.display_name }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>

        {% set contributions = contribution_sort(content.title) %}
        {% include 'website/contribution/contribution_display.jinja2' %}

{% endblock %}


{% block scripts %}

<script>
    document.getElementById('show-contribution-form').addEventListener('click', function ()
    {
        document.getElementById('contribution-form').style.display = "block";
        document.getElementById('messages').style.display = "none";
    });
</script>

{% endblock %}