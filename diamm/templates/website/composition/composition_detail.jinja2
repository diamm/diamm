{% extends "base.jinja2" %}

{% block body %}
    <h1>{{ content.title }}</h1>
    <h2>Composers</h2>
    <ul>
    {% for composer in content.composers %}
        <li>
            <a href="{{ composer.url }}">{{ composer.full_name }} </a>
            {% if composer.uncertain %}
                (uncertain)
            {% endif %}
        </li>
    {% endfor %}
    </ul>
    <h2>Appears in</h2>
    <ul>
    {% for source in content.sources %}
        <li><a href="{{ source.url }}">{{ source.display_name }}</a></li>
    {% endfor %}
    </ul>

    {% set contributions = contribution_sort(content.title) %}
    {% if contributions %}
        {% include "website/contribution/contributions_made.jinja2" %}
    {% endif %}
    <li><a href="{{ url('contribution') }}">Make a Contribution</a></li>
{% endblock %}
