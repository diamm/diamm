{% extends "website/cms/cmsbase.jinja2" %}

{% block cmsbody %}
    <div class="content">
        <h1 class="title">{{ page.title }}</h1>
        {{ page.body | richtext }}
    </div>
    <div>
        <h2 class="title is-3">List of dissertations</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>University</th>
                <th>Degree</th>
                <th>Year</th>
            </tr>
            </thead>
            <tbody>
            {% for p in page.get_children().specific() %}
                <tr>
                    <td>{{ p.author.full_name }}</td>
                    <td><a href="{{ p.url }}">{{ p.title }}</a></td>
                    <td>{{ p.university }}</td>
                    <td>{{ p.degree }}</td>
                    <td>{{ p.year }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
