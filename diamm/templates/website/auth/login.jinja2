{% extends "base.jinja2" %}

{% block body %}
    <div class="columns" style="align-items: center">
        <div class="column is-half is-offset-one-quarter">
            <div class="login-block">
                <h2 class="title">Log in</h2>
                <form action="{{ url('login') }}" method="post" class="login">
                    {% csrf_token %}
                    <label class="label">{{ form.username.label }}</label>
                    <p class="control">
                        <input class="input" type="text" id="{{ form.username.id_for_label }}" placeholder="you@example.co.uk" name="{{ form.username.html_name }}"/>
                    </p>
                    <label class="label">{{ form.password.label }}</label>
                    <p class="control">
                        <input class="input" type="password" id="{{ form.password.id_for_label }}" name="{{ form.password.html_name }}" />
                    </p>

                    <input class="input" type="hidden" name="next" value="{{ next }}" />
                    <button type="submit" class="button is-primary">Log in</button>
                </form>

                <p>
                    Are you a user of the old DIAMM site?
                    <a href="{{ url('reset') }}">You need to reset your password.</a>
                </p>
                <p>
                    <a href="{{ url('reset') }}">Recover a forgotten password.</a>
                </p>
                <p>
                    <a href="{{ url('register') }}">Register for a free account</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
