        <div class="offset-by-five eleven columns">
            <div class="login-block">
                <h2>Reset password</h2>
                <form action="{{ url('reset') }}" method="post">
                    {% csrf_token %}
                    {{ form }}
                    <button type="submit">Reset</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
