{% from "website/macros.jinja2" import foliation, composers, voices %}

<div class="column">
    <p>This source has not been inventoried. However, it is known to contain:</p>
    <table class="table inventory-table">
        <thead>
            <tr>
                <th>Folios / Pages</th>
                <th>Attribution in Source</th>
                <th>Composers (? Uncertain)</th>
            </tr>
        </thead>
        <tbody>
        {% set show_imagelinks = content.manifest_url is defined and request.user.is_authenticated %}
        {% for entry in content.uninventoried %}
        <tr>
            <td>
                {{ foliation(entry, show_imagelinks and entry.pages) }}
            </td>
            <td class="item-details">
                {{ entry.source_attribution|default("[No Source Attribution]") }}
            </td>
            <td>
                {{ composers(entry) }}
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr />
    <p>
        If you would like to contribute an inventory please get in touch. E-mail
        <a href="mailto:diamm@music.ox.ac.uk">diamm@music.ox.ac.uk</a>.
    </p>
</div>