<div class="column is-two-thirds">
    <table class="table">
        <thead>
        <tr>
            <th>Composer</th>
            <th>Compositions</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in content.composer_inventory %}
        <tr class="composer-order">
            <td class="composer">
                <span>
                    {% if entry.url %}
                    <a href="{{ entry.url }}">{{ entry.name }}</a>
                    {% else %}
                        {{ entry.name }}
                    {% endif %}
                </span>
            </td>
            <td class="composition-details">
                <ul>
                    {% for cmp in entry.inventory %}
                    <li>
                        {{ cmp.composition|default("[No description]") }} {{ "(?)" if cmp.uncertain else "" }}
                        {{ foliation(cmp) }}
                    </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>