{% extends "base.jinja2" %}

{% block body %}
    <div class="columns">
        <div class="column">
            <h2 class="title">{{ content.name }}, <a href="{{ content.country.url }}">{{ content.country.name }}</a></h2>
            <h3 class="title is-4">Archives</h3>
            <ul>
                {% for archive in content.archives %}
                    <li>
                        <a href="{{ archive.url }}">{{ archive.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
