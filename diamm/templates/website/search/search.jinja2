{% extends "base.jinja2" %}

{% block body %}
    {% include "website/blocks/search_box.jinja2" %}
    <div class="container-fluid">
    {% if content.types %}
        <div class="row type-filter-bar">
            <div class="col-md-push-1 col-md-11 type-filter">
                <ul class="nav nav-pills">
                    <li>
                        {% with type="all", params=request.GET %}
                        {% include 'website/search/results/type_links.jinja2' %}
                        {% endwith %}
                    </li>
                {% for type, num in content.types.items() %}
                    <li>
                        {% with type=type, params=request.GET %}
                        {% include 'website/search/results/type_links.jinja2' %}
                        {% endwith %}
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}
    {% if content.results %}
        <div class="row">
            <div class="col-md-push-1 col-md-11">
                <hgroup>
                    <h4>Search Results</h4>
                    <p>{{ content.count }} results were found.</p>
                </hgroup>

                {% for result in content.results %}
                    <div class="row">
                        {% if result.type == 'source' %}
                            {% include 'website/search/results/source.jinja2' %}
                        {% elif result.type == 'person' %}
                            {% include 'website/search/results/person.jinja2' %}
                        {% elif result.type == 'composition' %}
                            {% include 'website/search/results/composition.jinja2' %}
                        {% elif result.type == 'archive' %}
                            {% include 'website/search/results/archive.jinja2' %}
                        {% endif %}
                    </div>
                {% endfor %}
                {% include "website/blocks/browse_paginator.jinja2" %}
            </div>
        </div>
    {% else %}
        {% if request.GET.q %}
            <p>No results were found.</p>
        {% else %}
            <p>Type your search above.</p>
        {% endif %}
    {% endif %}

    </div>
{% endblock %}

{% block scripts %}
    <script>
        {# The System object is defined in base.html, where JSPM is initialized. #}
        System.import('{{ static("javascripts/search.js") }}');
    </script>
{% endblock %}
