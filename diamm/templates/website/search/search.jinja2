{% extends "base.jinja2" %}

{% block body %}
    {% include "website/blocks/search_box.jinja2" %}
    <div class="container-fluid">
    {% if content.types %}
        <div class="row type-filter-bar">
            <div class="col-md-push-1 col-md-10 type-filter">
                <span class="filter-label">Filter by: </span>
                <ul class="nav nav-pills">
                    <li>
                        {% with type="all", count=content.count, params=request.GET %}
                        {% include 'website/search/results/type_links.jinja2' %}
                        {% endwith %}
                    </li>
                {% for type, num in content.types.items() %}
                    <li>
                        {% with type=type, count=num, params=request.GET %}
                        {% include 'website/search/results/type_links.jinja2' %}
                        {% endwith %}
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}
    {% if content.results %}
        <div class="row">
            <div class="col-md-push-1 col-md-10">
                {% for result in content.results %}
                    <div class="row search-result">
                        {% include 'website/search/results/result.jinja2' %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% include "website/blocks/browse_paginator.jinja2" %}
            </div>
        </div>
    {% else %}
        {% if request.GET.q %}
            <p>No results were found.</p>
        {% else %}
            <p>Type your search above.</p>
        {% endif %}
    {% endif %}

    </div>
{% endblock %}

{% block scripts %}
    <script>
        {# The System object is defined in base.html, where JSPM is initialized. #}
        System.import('{{ static("javascripts/search.js") }}');
    </script>
{% endblock %}
