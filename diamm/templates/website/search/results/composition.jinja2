<div>
    {% if result.composers_ss %}
    <p>{{ result.composers_ss | length }} Composer{{ result.composers_ss | length | pluralize }}:
        {% for composer in result.composers_ss %}
            {{ composer }}{{ ", " if not loop.last else "" }}
        {% endfor %}
    </p>
    {% else %}
    <p>Anonymous</p>
    {% endif %}
    <p>Appears in {{ result.sources_ii | length }} source{{ result.sources_ii | length | pluralize }}</p>

    {% if result.genres_ss %}
    <p>Genres:
        {% for genre in result.genres_ss %}
            {% set genrelist = genre.split("|") %}
            {{ genrelist[0] }}{{ ", " if not loop.last else "" }}
        {% endfor %}
    </p>
    {% endif %}
</div>
