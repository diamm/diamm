<div>
    {% if result.composers_ss %}
    <p>{{ result.composers_ss | length }} Composer{{ result.composers_ss | length | pluralize }}:
        {% for composer in result.composers_ss %}
            {{ composer }}{{ ", " if not loop.last else "" }}
        {% endfor %}
    </p>
    {% else %}
    <p>Anonymous</p>
    {% endif %}
    <p>Appears in {{ result.sources_ii | length }} source{{ result.sources_ii | length | pluralize }}:
        {% for source in result.sources_ss %}
            {% set sourcelist = source.split("|") %}
            <a href="{{ url('source-detail', pk=sourcelist[0]) }}">{{ sourcelist[1] }}</a>{{ ", " if not loop.last else "" }}
        {% endfor %}
    </p>
    {% if result.genres_ss %}
    <p></p>
    {% endif %}
</div>
