<div>
    {% if result.composers_ss %}
    Composer{{ result.composers_ss | length | pluralize }}:
        {% for composer in result.composers_ss %}
            {{ composer }}{{ "." if not loop.last else "" }}
        {% endfor %}
    {% else %}
        Anonymous
    {% endif %}

    Appears in {{ result.sources_ii | length }} source{{ result.sources_ii | length | pluralize }}

    {% if result.genres_ss %}
        Genre{{ result.genres_ss | length | pluralize }}:
        {% for genre in result.genres_ss %}
            {{ genre }}{{ ", " if not loop.last else "" }}
        {% endfor %}
    {% endif %}
</div>
