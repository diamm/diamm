{% extends "base.jinja2" %}

{% block body %}
    <div class="row">
        <div class="sixteen columns">
            <h1>{{ content.cluster_shelfmark }}</h1>
            {% if content.sources %}
                <h2>Sources</h2>
                <ul>
                {% for source in content.sources %}
                    <li class="image-source-list">
                        {% if source.has_images and source.public_images %}
                            <i class="fa fa-picture-o" aria-hidden="true"></i>
                        {% endif %}
                        <a href="{{ source.url }}">{{ source.display_name }}</a>
                    </li>
                {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
