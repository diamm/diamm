{% extends "base.jinja2" %}

{% block body %}
    <div class="row">
        <div class="sixteen columns">
            <h1>Organization Detail</h1>
            {% set contributions = contribution_sort(content.name) %}
            {% include 'website/contribution/contribution_display.jinja2' %}
        </div>
    </div>
{% endblock %}

{% block scripts %}

    <script>
        document.getElementById('show-contribution-form').addEventListener('click', function ()
        {
            document.getElementById('contribution-form').style.display = "block";
            document.getElementById('messages').style.display = "none";
        });
    </script>

{% endblock %}